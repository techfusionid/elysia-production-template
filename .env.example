# Application
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/elysia_db

# Auth
# (generate secret: openssl rand -base64 32)
BETTER_AUTH_SECRET=your-very-long-random-secret-here
BETTER_AUTH_URL=http://localhost:3000

# Logging (info/debug/error)
LOG_LEVEL=info

# CORS (comma-separated)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Optional - uncomment and configure as needed
# -----------------------------------------------------------------------------

# Email (Resend) - for password reset & verification
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting (defaults: 100 req/60s global, 10 req/60s auth)
# RATE_LIMIT_WINDOW_MS=60000
# RATE_LIMIT_MAX=100
# AUTH_RATE_LIMIT_WINDOW_MS=60000
# AUTH_RATE_LIMIT_MAX=10

# OAuth Providers
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
# GOOGLE_CLIENT_ID=
# GOOGLE_CLIENT_SECRET=
