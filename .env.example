# Copy this file to .env and fill in your values:
# cp .env.example .env

# Application
NODE_ENV=development
HOST=0.0.0.0
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/elysia_db

# Authentication
# Generate a strong secret: openssl rand -base64 32
BETTER_AUTH_SECRET=your-random-secret-here
BETTER_AUTH_URL=http://localhost:3000

# Logging (levels: fatal/error/warn/info/debug/trace)
LOG_LEVEL=info

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# -----------------------------------------------------------------------------
# Optional - uncomment and configure as needed
# -----------------------------------------------------------------------------

# Email (Resend) - for password reset & email verification
# RESEND_API_KEY=re_xxxxxxxxxxxxx
# EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting (values in milliseconds)
# RATE_LIMIT_WINDOW_MS=60000    # 60 seconds
# RATE_LIMIT_MAX=100            # 100 requests per window
# AUTH_RATE_LIMIT_WINDOW_MS=60000
# AUTH_RATE_LIMIT_MAX=10

# OAuth Providers
# GITHUB_CLIENT_ID=your_id
# GITHUB_CLIENT_SECRET=your_secret
# GOOGLE_CLIENT_ID=your_id
# GOOGLE_CLIENT_SECRET=your_secret
