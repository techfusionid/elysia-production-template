{
	"name": "elysia-production-template",
	"version": "1.0.0",
	"description": "Production-ready Elysia.js backend boilerplate with auth, database, and best practices built-in",
	"author": "Andrew",
	"license": "MIT",
	"keywords": [
		"elysia",
		"bun",
		"typescript",
		"backend",
		"api",
		"boilerplate",
		"drizzle",
		"better-auth",
		"production-ready"
	],
	"scripts": {
		"dev": "bun run --watch src/index.ts",
		"build": "bun build --target=bun --outdir=./dist src/index.ts",
		"start": "NODE_ENV=production bun run dist/index.js",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "bun run src/scripts/migrate.ts",
		"db:seed": "bun run src/scripts/seed.ts",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"docker:build": "docker build -t elysia-app .",
		"docker:up": "docker-compose up -d",
		"docker:down": "docker-compose down",
		"docker:logs": "docker-compose logs -f"
	},
	"dependencies": {
		"@elysiajs/bearer": "^1.2.0",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/swagger": "^1.3.1",
		"@sinclair/typebox": "^0.34.9",
		"better-auth": "^1.4.7",
		"drizzle-orm": "^0.41.0",
		"elysia": "^1.4.0",
		"elysia-rate-limit": "^4.4.2",
		"pino": "^9.5.0",
		"pino-pretty": "^13.0.0",
		"postgres": "^3.4.5",
		"resend": "^6.7.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"bun-types": "^1.1.38",
		"drizzle-kit": "^0.28.1"
	},
	"engines": {
		"bun": ">=1.1.0"
	},
	"type": "module"
}
